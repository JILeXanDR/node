extends template

block content

    .container
        .row
            .col-md-12
                .error-template
                    h1 Oops!
                    h2= error.message
                    .error-details
                        | Sorry, an error has occured, Requested page not found!
                    .error-actions
                        a.btn.btn-default.btn-lg(href='/')
                            span.glyphicon.glyphicon-home
                            |  Take Me Home
                    pre #{error.stack}