extends ../template

block content

    .container
        .row
            .col-md-4.col-md-offset-4
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Please sign in
                    .panel-body
                        form(accept-charset='UTF-8', role='form', method="post", action='')
                            fieldset
                                .form-group
                                    input.form-control(placeholder='Login', name='login', type='text')
                                .form-group
                                    input.form-control(placeholder='Password', name='password', type='password')
                                input.btn.btn-lg.btn-success.btn-block(type='submit', value='Login')